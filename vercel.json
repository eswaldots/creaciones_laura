{
    "version": 2,
    "builds": [
      { "src": "./backend/package.json", "use": "@vercel/next" },
      { "src": "./frontend/index.js", "use": "@vercel/node" }
    ],
    "rewrites": [
      { "source": "/api/(.*)", "destination": "/server/index.js" },
      { "source": "(.*)", "destination": "/index.html" }
    ]
  }