{
    "version": 2,
    "env": {
      "DOTENV_CONFIG_PATH": "./.env"
    },
    "builds": [
      { "src": "/backend/package.json", "use": "@vercel/node", "config": { "includeFiles": ["dist/**"] } },
      { "src": "/frontend/package.json", "use": "@vercel/next" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/backend/dist/app.js" },
      { "src": "/(.*)", "dest": "/frontend/$1" }
    ]
  }